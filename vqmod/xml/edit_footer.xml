<modification>

	<id>Edit Footer</id>
	<version>300.1</version>
	<vqmver>2.6.2</vqmver>

    <file name="catalog/language/en-gb/common/footer.php">
        <operation>
            <search position="replace"><![CDATA[
            $_['text_powered']      = 'Powered By <a href="http://www.opencart.com">OpenCart</a><br /> %s &copy; %s';
            ]]></search>
            <add><![CDATA[
            $_['text_powered']      = 'Powered By <a href="http://www.basf.com">BASF Corporation</a><br /> %s &copy; %s';
            ]]></add>
        </operation>
    </file>

    <file name="catalog/controller/common/footer.php">
        <operation>
            <search position="after"><![CDATA[
            $data['scripts'] = $this->document->getScripts('footer');
            ]]></search>
            <add><![CDATA[
            $data['logged'] = $this->customer->isLogged();
            ]]></add>
        </operation>
    </file>

	<file name="catalog/view/theme/basf/template/common/footer.twig">
		<operation>
			<search position="before"><![CDATA[
			<footer>
			]]></search>
			<add><![CDATA[
            {% if logged %}
            ]]></add>
		</operation>

        <operation>
            <search position="replace" offset="10"><![CDATA[
            <li><a href="{{ voucher }}">{{ text_voucher }}</a></li>
            ]]></search>
			<add><![CDATA[
                </ul>
            </div>
            <div class="col-sm-3">
                <h5>{{ text_account }}</h5>
                <ul class="list-unstyled">
                <li><a href="{{ account }}">{{ text_account }}</a></li>
                <li><a href="{{ order }}">{{ text_order }}</a></li>
            ]]></add>
        </operation>

        <operation>
			<search position="after"><![CDATA[
			</footer>
			]]></search>
			<add><![CDATA[
            {% endif %}
            {% if not logged %}
            <p align="center">{{ powered }}</p>
            {% endif %}
            ]]></add>
		</operation>
    </file>
    
</modification>